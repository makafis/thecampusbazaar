<div class="top-bar">
  <div class="container">
    <div class="tb-contact pull-left">
      <!-- Email -->
      <i class="fa fa-envelope color"></i> &nbsp; <a href="mailto:contact@domain.com">contact@domain.com</a>
      &nbsp;&nbsp;  
      <!-- Phone -->
      <i class="fa fa-phone color"></i> &nbsp; +1 (342)-(323)-4923
    </div>
    <div class="tb-social pull-right">
      <div class="brand-bg text-right">
        <!-- Brand Icons -->
        <a href="#" class="facebook"><i class="fa fa-facebook square-2 rounded-1"></i></a>
        <a href="#" class="twitter"><i class="fa fa-twitter square-2 rounded-1"></i></a>
        <a href="#" class="google-plus"><i class="fa fa-google-plus square-2 rounded-1"></i></a>
        <a href="#" class="linkedin"><i class="fa fa-linkedin square-2 rounded-1"></i></a>
        <a href="#" class="pinterest"><i class="fa fa-pinterest square-2 rounded-1"></i></a>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>  
</div>

<div class="header-2" style="PADDING-TOP: 1px">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <!-- Logo section -->
        <div class="logo">
          <h1><%= link_to 'CampusBazaar', root_path %></h1>
        </div>
      </div>
      <div class="col-md-8">  
              <!-- Navigation starts.  -->
        <div class="navy">    
          <ul>
          <% if current_user %>
            <!-- Main menu -->
            <li class="has-sub"><span class="submenu-button"></span><a href="#">Your Account</a>
              <!-- Submenu -->
              <ul>
                <li><%= link_to  "Edit Your Account", user_path(current_user) %></li>
                <li ><%= link_to("Messages #{current_user.mailbox.inbox(:unread => true).count(:id, :distinct => true)}", conversations_path) %></li>
                <li ><%= link_to('Sell an Item', new_user_item_path(:user_id => current_user.id)) %> </li>
                <li ><%= link_to('Manage Your Items', user_items_path(:user_id => current_user.id)) %> </li>
                <!-- 2nd Level sub menu -->
                 <% if current_user.seller? %>
                <li class="has-sub"><span class="submenu-button"></span>
                  <a href="#">Offers</a>
                  <ul>
                    <li><%= link_to('Offers Sent', offers_sent_path(current_user))%></li>
                    <li><%= link_to('Offers Received', offers_received_path(current_user))%></li>
                  </ul>
                </li>
                <% elsif current_user.buyer? %>
                  <li ><%= link_to('Offers Sent', offers_sent_path(current_user)) %> </li>
                <% end %>
              </ul>
            </li>              
            <li><%= link_to(" About this Project", about_path) %></li>
            <% end %>
        <% if current_user %>
          <li class="pull-right"><%= link_to "Logout", '/logout' %></li>
          <li class="pull-right"><%= link_to "|", '/' %></li>
          <li class="pull-right"><%= link_to "Signed in as #{current_user.name}", '/' %></li>
          <% else %>
          <li class="pull-right"><%= link_to 'Login', '/login' %></li>
          <li class="pull-right"><%= link_to "|", '/' %></li>
          <li class="pull-right"><%= link_to 'Signup', '/signup' %></li>
        <% end %>
          </ul>
        </div>              
         <!-- Navigation ends -->        
      </div>
      <div class="col-md-1">
              <!-- Search section -->
              <div class="head-search pull-right">
                <a href="#" class="b-dropdown"><i class="fa fa-search square-2 rounded-1 bg-color white"></i></a>
                <div class="b-dropdown-block">
                  <form role="form">
                    <!-- Input Group -->
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="Type Something">
                      <span class="input-group-btn">
                        <button class="btn btn-color" type="button">Search</button>
                      </span>
                    </div>
                  </form>
                </div>
              </div>
              <!-- Search section ends -->
              <div class="clearfix"></div>        
      </div>
    </div>
  </div>
</div>























