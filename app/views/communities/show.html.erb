<div class="page-heading-two">
  <div class="container">
    <h2>Welcome, <%= current_user.name %> </h2>
    <div class="clearfix"></div>
  </div>
</div>
<div class="container">
  <div class="ecommerce">
    <div class="col-md-9 col-sm-8 col-md-push-3 col-sm-push-4">
      <div class="shopping-content">
        <h4 style="text-align: center">Here's what people are selling at <%= link_to(@community.name, info_path)  %></h4> 
        <hr>
        <div class="row">
          <% @items.each do |item| %>
            <%= render partial: 'items/community_item', locals: {item: item} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-4 col-md-pull-9 col-sm-pull-8">
        <!-- Shopping Sidebar -->
      <div class="sidebar">
        <!-- Heading -->
        <h2>Category</h2>
        <!-- Sidebar Menu -->
        <ul class="list-unstyled my-list">
          <li><%= link_to "All", community_path(@community.id, :category_id => 'all' ), :category_id => "all" %></li>
          <% @categories.each do |category| %>
            <li> <%= link_to category.name, community_path(@community.id, :category_id => category.id), :category_id => category.id %> </li>
          <% end %>
        </ul>
        <h2>Price</h2>
        <ul class="list-unstyled my-list">
          <li><input type="checkbox"> &nbsp;$0-$49</li>
          <li><input type="checkbox"> &nbsp;$50-$99</li>
          <li><input type="checkbox"> &nbsp;$100-$499</li>
          <li><input type="checkbox"> &nbsp;$500-$999</li>
          <li><input type="checkbox"> &nbsp;$1000 â‰¤</li>
        </ul>
      </div>
    </div>
  </div>
</div>