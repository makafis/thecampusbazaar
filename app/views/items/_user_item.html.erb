<li class="col-sm-4">
  <div class="panel panel-success">
    <div class="panel-heading">
      <%= image_tag item.product.url(:medium), :class => "img-responsive center-block"%>
    </div>
    <div class="panel-body">
      <div class="row" style="font-size:23px"> <%= link_to(item.name, user_item_path(current_user, :id => item.id)) %></div>
      <div style="font-size:15px">
        <div class="row">Condition: <%= item.condition %></div>
        <div class="row">Price: $<%=  format("%.2f", item.price) %></div>
        <div class="row">Offered by: <%= item.seller.name %></div>
        <br>
        <div class="row"><%= link_to 'Edit Item', edit_user_item_path(current_user, item), class: 'btn btn-info'%></div>
      </div>
    </div>
  </div>
</li>

