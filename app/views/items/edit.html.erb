<div class="container">
    <div class="components">
        <div class="col-md-6">
            <%= form_for([current_user, @item]) do |item_form| %>
            <div class="form-group">
                <%= item_form.label :name %>
                <%= item_form.text_field :name, :value => @item.name%>
            </div>
            <div class="form-group">
                <%= item_form.label :price %>
                <%= item_form.number_field :price, :value => @item.price, :step => 0.01 %>
            </div>
            <div class="form-group">
                <%= item_form.label :product %>
                <%= item_form.file_field :product %>
            </div>
            <div class="form-group">
                <%= item_form.label :delete_product_image%>
                <%= item_form.check_box(:delete_product)%>
            </div>
            <div class="form-group">
                <%= item_form.label :description %>
                <%= item_form.text_area :description, :value=> @item.description, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= item_form.label :condition %>
                <%= item_form.select :condition,['New','Excellent','Good','Acceptable'], :class => 'form-control', :prompt => 'Select One', :value =>  @item.condition %>
            </div>
            <%= link_to 'Delete', delete_item_path(current_user,@item), :method => 'delete', data: {:confirm => 'Are you sure?'}, class: 'btn btn-danger'%>
            <%= item_form.submit 'Update', :class => 'btn btn-info'%>
            <% end %>
            <br>
            <br>
        </div>
    </div>
</div>


