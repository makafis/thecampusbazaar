<%= form_for([current_user.community, current_user, Item.new]) do |item_form| %>

  <%= item_form.label :name %>
  <%= item_form.text_field :name %>

  <%= item_form.label :price %>
  <%= item_form.number_field :price %>

  <%= item_form.label :description %>
  <%= item_form.text_area :description %>

  <%= item_form.label :condition %>
  <%= item_form.text_field :condition %>

  <%= item_form.submit %>

<% end %>