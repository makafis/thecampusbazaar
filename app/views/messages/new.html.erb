<%= form_for Message.new do |f| %>
Recipient: @item.seller.name
 
Sender: current_user.name 

  <%= f.label :item_name, 'Message for item'%>:
  <%= f.text_field :item_name, value: @item.name %><br />

  <%= f.hidden_field :item_id, :value => @item.id%>
  <%= f.hidden_field :recipient_id, :value => @item.seller.id%>
  <%= f.hidden_field :sender_id, :value => current_user.id%>

  <%= f.label :content %>
  <%= f.text_area :content, :rows => "5", placeholder: 'Write your message here'%><br />

  <%= f.submit 'Send Message' %>
<% end %>
