<div class="main-block">

  <div class="page-heading-two">
    <div class="container">
      <h2>Profile <span>Campus Bazaar</span></h2>
      <div class="breads">
        Home / <a href="#">Page</a> / <a href="#">Sub Page</a>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>

  <div class="container"> 
    <div class="ecommerce">
      <div class="row">
        <div class="col-md-9 col-sm-8 col-md-push-3 col-sm-push-4">
          <div class="shopping-content">
            <h4><i class="fa fa-user blue"></i>&nbsp; Profile&nbsp;<small>Campus Bazaar</small></h4>
            <hr>
            <div class="shopping-account">
              <div class="row"> 
                <div class="col-md-3 col-sm-4 col-xs-4">
                  <!-- Image -->
                  <img src="<%= @user.avatar.url(:medium) %>" class="img-responsive img-thumbnail" alt="<%= @user.name%> profile picture">
                </div>
                <div class="col-md-9 col-sm-8 col-xs-8">
                  <!-- Your Name / Heading -->
                  <h4><%= @user.name %></h4>
                  <div class="address">
                    <!-- Email Address -->
                    <span><i class="fa fa-envelope blue"></i>&nbsp; <%= @user.email %></span><br>
                    <span><i class="fa fa-cubes blue"></i>&nbsp; <%= @user.items.count%> items for sale</span><br>
                    <span><i class="fa fa-money blue"></i>&nbsp; <%= @user.pending_offers_received.count %> offers pending</span>
                  </div>
                </div> 
              </div>
            </div>
          </div>
        </div> <!--PUSH-4-->
        <div class="col-md-3 col-sm-4 col-md-pull-9 col-sm-pull-8">
          <div class="sidebar">
            <h2>Navigation</h2>
            <ul class="account-nav">
              <li><%= link_to  "Profile", user_path(@user) %></li>
              <li><%= link_to "Message User", new_message_path(user: @user.id, item: "")%></li>
            </ul>
          </div>
        </div> <!--PULL-8-->
      </div> <!--ROW-->
    </div>
  </div>
</div>
           
