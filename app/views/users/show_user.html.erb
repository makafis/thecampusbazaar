

  <div class="page-heading-two">
    <div class="container">
      <h2>Profile <span>Campus Bazaar</span></h2>
      <div class="clearfix"></div>
    </div>
  </div>

  <div class="container"> 
    <div class="ecommerce">
      <div class="row">
        <div class="col-md-9 col-sm-8 col-md-push-3 col-sm-push-4">
          <div class="shopping-content">
            <h4><i class="fa fa-user color"></i>&nbsp; Profile&nbsp;<small>Campus Bazaar</small></h4>
            <hr>
            <div class="shopping-account">
              <div class="row"> 
                <div class="col-md-3 col-sm-4 col-xs-4">
                  <!-- Image -->
                  <img src="<%= @user.avatar.url(:medium) %>" class="img-responsive img-thumbnail" alt="<%= @user.name%> profile picture">
                </div>
                <div class="col-md-9 col-sm-8 col-xs-8">
                  <!-- Your Name / Heading -->
                  <h4><%= @user.name %></h4>
                  <div class="address">
                    <!-- Email Address -->
                    <span><i class="fa fa-envelope color"></i>&nbsp; <%= @user.email %></span><br>
                    <span><i class="fa fa-cubes color"></i>&nbsp; <%= @user.items.count%> items for sale</span><br>
                    <span><i class="fa fa-money color"></i>&nbsp; <%= @user.pending_offers_received.count %> offers pending</span>
                  </div>
                </div> 
              </div>
            </div>
          </div>
        </div> <!--PUSH-4-->
        <div class="col-md-3 col-sm-4 col-md-pull-9 col-sm-pull-8">
          <div class="sidebar">
            <h2>Navigation</h2>
            <ul class="account-nav">
              <li><%= link_to  "Profile", user_path(@user) %></li>
            </ul>
          </div>
        </div> <!--PULL-8-->
      </div> <!--ROW-->
      <div class="recent-items">
        <!-- Block heading two -->
        <div class="block-heading-two">
          <h3><span>Recent Items</span></h3>
        </div>
        <!-- Owl carousel block starts -->
        <!-- Change values of data-items, data-auto-play, data-pagination & data-single-item based on your needs -->
          <div class="owl-carousel owl-theme" data-items="<%= @user.items.count %>" data-auto-play="true" data-pagination="true" data-single-item="false" style="opacity: 1; display: block;">
            <!-- Carousel item -->
            <div class="owl-wrapper-outer">
              <div class="owl-wrapper" style="width: 5220; left: 0px; display: block; transition: all 800ms ease; transform: translate3d(-522, 0px, 0px);">
              <% @user.items.each do |item| %>
                <div class="owl-item" style="width: 261;">
                  <%= render partial: 'users/carouselitem', locals: {item: item} %>
                </div>
              <% end %>
              </div>
            </div>   
            <div class="owl-controls clickable"><div class="owl-pagination"><div class="owl-page active"><span class=""></span></div><div class="owl-page"><span class=""></span></div></div></div> 
          </div> <!--OWL CAROUSEL-->  
        </div> <!--RECENT ITEMS -->
    </div> <!--ECOMMERCE-->
  </div>

           
