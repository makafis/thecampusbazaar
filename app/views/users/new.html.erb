

<div class="page-heading-two">
  <div class="container">
    <h2>Signup!<span></span></h2>
    <div class="clearfix"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="center signup-center">
    <div class="">
      <div class="well login-reg-form">
      <%= form_for :user, url: '/users', :class => "form-horizontal", :type => "form" do |f| %>
        <div class="form-group">
        <% if @user && @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        </div>
        <!-- Form Group -->
        <div class="form-group <%= "error_field" if @user && @user.errors[:name] %>">
          <!-- Label -->
            <%= f.label :name, :class => "control-label"  %>
          <div class="">
            <!-- Input -->
            <% if @user && @user.errors[:name] %>
              <span><%= @user.errors[:name].first %></span>
            <% end %>
            <%= f.text_field :name, :class => 'form-control', :type => "text" %>
          </div>
        </div>

        <div class="form-group <%= "error_field" if @user && @user.errors[:email] %>">
          <!-- Label -->
            <%= f.label :email, :class => "control-label"  %>
          <div class="">
            <!-- Input -->
            <% if @user && @user.errors[:email] %>
              <span><%= @user.errors[:email].first %></span>
            <% end %>
            <%= f.text_field :email, :class => 'form-control', :type => "text" %>
          </div>
        </div>

        <div class="form-group <%= "error_field" if @user && @user.errors[:password] %>">
          <!-- Label -->
            <%= f.label :password, :class => " control-label" %>
          <div class="">
            <!-- Input -->
            <% if @user && @user.errors[:password] %>
              <span><%= @user.errors[:password].first %></span>
            <% end %>
            <%= f.password_field :password, :class => 'form-control' %>
          </div>
        </div>

        <div class="form-group <%= "error_field" if @user && @user.errors[:password] %>">
          <!-- Label -->
            <%= f.label :password_confirmation, :class => "control-label" %>
          <div class="">
            <!-- Input -->
            <%= f.password_field :password_confirmation, :class => 'form-control'%>
          </div>
        </div>


        <div class="form-group">
          <div class="">
            <!-- Button -->
            <%= f.submit "Submit", :class => "btn btn-red" %>
          </div>
        </div>
      <% end %>
      </div>
      </div>
    </div>
  </div>
  <br><br><br><br>
</div>


