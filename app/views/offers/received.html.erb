<div class="tables_of_items">
  <h1>Open Items:</h1>
    <div class="all_offered_item_tables">
    <% @available_items.each do |item| %>
    <h2><%= link_to item.name, user_item_path(item.community, item)%> </h2>
      <div class="item_table" id="offer<%=item.id%>">
        <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th width="16%">Item</th>
            <th width="13%">From</th>
            <th width="13%">Offer Price</th>
            <th width="16%">Comments</th>
            <th width="10%">Offer Sent</th>
            <th width="10%">Status</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
      <% item.offers.select do |offer|%>
      
      <%= render :partial => "tableofoffers", locals: {item: item, offer: offer}%>

      <% end %>
        </tbody>
        </table> 
        </div>
    <% end %>
    </div>

  <h1>Sold Items:</h1>
    <div class="all_sold_item_tables">
    <% @sold_items.each do |item| %>
      <div class="item_table" id="offer<%=item.id%>">
        <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th width="16%">Item</th>
            <th width="13%">From</th>
            <th width="16%">Offer Price</th>
            <th width="13%">Comments</th>
            <th width="10%">Offer Sent</th>
            <th width="10%">Status</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
      <% item.offers.select do |offer|%>
      <%= render :partial => "tableofoffers", locals: {item: item, offer: offer}%>
      <% end %>
        </tbody>
        </table> 
        </div>
    <% end %>
    </div>
</div>
